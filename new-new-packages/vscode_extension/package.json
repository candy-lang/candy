{
  "name": "candy",
  "displayName": "ğŸ­Â Candy",
  "description": "Candy language support",
  "publisher": "ğŸ­Â Candy",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/candy-lang/candy.git",
    "directory": "new-new-packages/vscode_extension"
  },
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:candy",
    "workspaceContains:**/*.candy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "candy.hints.valueColor",
        "description": "The color of hints indicating the value of an expression. If not supplied, the color for `tab.inactiveForeground` will be used.",
        "defaults": {
          "dark": "tab.inactiveForeground",
          "light": "tab.inactiveForeground",
          "highContrast": "tab.inactiveForeground"
        }
      },
      {
        "id": "candy.hints.panicColor",
        "description": "The text color of hints indicating that the code panics. If not supplied, the color for `editorError.foreground` will be used.",
        "defaults": {
          "dark": "editorError.foreground",
          "light": "editorError.foreground",
          "highContrast": "editorError.foreground"
        }
      }
    ],
    "configuration": {
      "title": "ğŸ­Â Candy",
      "properties": {
        "candy.languageServerCommand": {
          "type": "string",
          "default": "",
          "markdownDescription": "Command to start the ğŸ­Â Candy language server. If empty, we'll attempt to find the ğŸ­Â Candy executable in the `PATH` environment variable.",
          "scope": "machine"
        }
      }
    },
    "configurationDefaults": {
      "[candy]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
      }
    },
    "languages": [
      {
        "id": "candy",
        "extensions": [
          ".candy"
        ],
        "aliases": [
          "ğŸ­Â Candy"
        ],
        "configuration": "./declarative/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0-next.12"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.21.0",
    "eslint": "^8.14.0",
    "glob": "^8.0.1",
    "mocha": "^10.0.0",
    "typescript": "^4.6.4",
    "vscode-test": "^1.4.0"
  }
}
