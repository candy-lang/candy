{
  "name": "candy",
  "displayName": "üç≠¬†Candy",
  "description": "Candy language support",
  "publisher": "üç≠¬†Candy",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/candy-lang/candy.git",
    "directory": "vscode_extension"
  },
  "//": "Keep in sync with `devDependencies.@types/vscode`",
  "//": "https://github.com/ewanharris/vscode-versions",
  "engines": {
    "node": "^18.17.1",
    "vscode": "^1.86.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Debuggers"
  ],
  "activationEvents": [
    "workspaceContains:**/*.candy"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "candy.valueHint.background",
        "description": "The color of hints indicating the value of an expression.",
        "defaults": {
          "dark": "#65656522",
          "light": "#65656522",
          "highContrast": "#656565"
        }
      },
      {
        "id": "candy.valueHint.foreground",
        "description": "The color of hints indicating the value of an expression.",
        "defaults": {
          "dark": "#9a9a9a",
          "light": "#9a9a9a",
          "highContrast": "#000000"
        }
      },
      {
        "id": "candy.statusHint.background",
        "description": "The text color of hints indicating the fuzzing status of a function.",
        "defaults": {
          "dark": "#65656522",
          "light": "#65656522",
          "highContrast": "#656565"
        }
      },
      {
        "id": "candy.statusHint.foreground",
        "description": "The text color of hints indicating the fuzzing status of a function.",
        "defaults": {
          "dark": "#9a9a9a",
          "light": "#9a9a9a",
          "highContrast": "#000000"
        }
      },
      {
        "id": "candy.sampleInput.returningNormally.background",
        "description": "The background color of hints showing a sample input.",
        "defaults": {
          "dark": "#a8d86a22",
          "light": "#a8d86a44",
          "highContrast": "#61892d"
        }
      },
      {
        "id": "candy.sampleInput.returningNormally.foreground",
        "description": "The text color of hints showing a sample input.",
        "defaults": {
          "dark": "#a8d86a",
          "light": "#61892d",
          "highContrast": "#ffffff"
        }
      },
      {
        "id": "candy.sampleInput.panickingWithCallerResponsible.background",
        "description": "The background color of hints showing an input that fails a need.",
        "defaults": {
          "dark": "#f3d67622",
          "light": "#f3d67644",
          "highContrast": "#f3d676"
        }
      },
      {
        "id": "candy.sampleInput.panickingWithCallerResponsible.foreground",
        "description": "The text color of hints showing an input that fails a need.",
        "defaults": {
          "dark": "#f3d676",
          "light": "#a48930",
          "highContrast": "#000000"
        }
      },
      {
        "id": "candy.sampleInput.panickingWithInternalCodeResponsible.background",
        "description": "The background color of hints showing an input that causes the function to panic internally.",
        "defaults": {
          "dark": "#ff3f3f22",
          "light": "#ff3f3f22",
          "highContrast": "#ff3f3f"
        }
      },
      {
        "id": "candy.sampleInput.panickingWithInternalCodeResponsible.foreground",
        "description": "The text color of hints showing an input that causes the function to panic internally.",
        "defaults": {
          "dark": "#ff3f3f",
          "light": "#c02222",
          "highContrast": "#ffffff"
        }
      }
    ],
    "commands": [
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewRcst",
        "title": "View RCST"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewAst",
        "title": "View AST"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewHir",
        "title": "View HIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewMir",
        "title": "View MIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewOptimizedMir",
        "title": "View Optimized MIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewLir",
        "title": "View LIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewOptimizedLir",
        "title": "View Optimized LIR"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewVmByteCode",
        "title": "View VM Byte Code"
      },
      {
        "category": "Candy Compiler Debugging",
        "command": "candy.debug.viewLlvmIr",
        "title": "View LLVM IR"
      }
    ],
    "configuration": {
      "title": "üç≠¬†Candy",
      "properties": {
        "candy.languageServerCommand": {
          "type": "string",
          "default": "",
          "markdownDescription": "Command to start the üç≠¬†Candy language server. If empty, we'll attempt to find the üç≠¬†Candy executable in the `PATH` environment variable. If you want LLVM IR support, add the `inkwell` feature flag.",
          "scope": "machine-overridable"
        },
        "candy.packagesPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path of a folder containing all üç≠¬†Candy packages.",
          "scope": "machine-overridable"
        }
      }
    },
    "configurationDefaults": {
      "[candy]": {
        "editor.detectIndentation": false,
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.suggest.insertMode": "replace",
        "editor.tabSize": 2
      }
    },
    "debuggers": [
      {
        "type": "candy",
        "label": "üç≠ Candy",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "markdownDescription": "Path to the program to start (e.g., `_.candy`)"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": "üç≠ Candy: Launch",
            "description": "Launch and debug a üç≠ Candy app",
            "body": {
              "type": "candy",
              "name": "üç≠ Candy",
              "request": "launch",
              "program": "^\"_.candy\""
            }
          }
        ]
      }
    ],
    "languages": [
      {
        "id": "candy",
        "extensions": [
          ".candy"
        ],
        "aliases": [
          "üç≠¬†Candy"
        ],
        "configuration": "./declarative/language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint --ext ts .",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.20",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.1",
    "mocha": "^10.8.2",
    "prettier": "^3.4.2",
    "typescript": "^5.4.5",
    "vscode-test": "^1.4.0"
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/strict-type-checked",
      "plugin:@typescript-eslint/stylistic-type-checked",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "project": true,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "warn"
    }
  },
  "prettier": {}
}
